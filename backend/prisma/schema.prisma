generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FriendshipStatus {
  pending
  accepted
  blocked
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  stats     Stats?
  
  // Relaciones de amistad
  friendsInitiated UserFriend[] @relation("UserFriendsInitiator")
  friendsReceived  UserFriend[] @relation("UserFriendsReceiver")
}

model UserFriend {
  id        Int              @id @default(autoincrement())
  userId    Int              // Usuario que env√≠a/inicia la solicitud
  friendId  Int              // Usuario que recibe la solicitud
  status    FriendshipStatus @default(pending)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Relaciones
  user   User @relation("UserFriendsInitiator", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("UserFriendsReceiver", fields: [friendId], references: [id], onDelete: Cascade)

  // Constraints
  @@unique([userId, friendId])
  @@index([friendId])
  @@index([userId, status])
  @@index([friendId, status])
}

model Stats {
  id     Int  @id @default(autoincrement())
  wins   Int  @default(0)
  losses Int  @default(0)
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}
